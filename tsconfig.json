{
  "compilerOptions": {
    "target": "ESNext",                                
    "module": "ESNext",                                
    "rootDir": "./src",                                  
    "moduleResolution": "Node",                                        
    "esModuleInterop": true,   
    "resolveJsonModule": true,

    "declaration": true,       
    "emitDeclarationOnly": true,  
    "declarationDir": "./dist/types",   
    
    "forceConsistentCasingInFileNames": true,            
    "strict": true,        
    "skipLibCheck": false,  
    "baseUrl": "./",
    "paths":{
      "@lib/*":["./src/lib/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}